@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h4 {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%;
    }
</style>
<main>
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Album example</h1>
                <p class="lead text-body-secondary">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>

            </div>
        </div>
    </section>
    <div class="container">
        <div class="row row-cols-sm-3 row-cols-md-5 row-cols-lg-7 row-cols-xl-12">  
            @foreach (var item in Model.Category)
            {
                <a class="btn btn-outline-danger" href="?search=@item.CategoryImg.Title">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="@item.CategoryImage" class="img-fluid rounded-start" alt="@item.CategoryImage.CategoryImg_Title">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Title</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
    <div class="album py-5 bg-body-tertiary">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
                @if (Model != null)
                {
                    @Html.Partial("_cards")

                }
                else
                {
                    @Html.Partial("_noncards");
                }
            </div>
        </div>
    </div>

</main>

